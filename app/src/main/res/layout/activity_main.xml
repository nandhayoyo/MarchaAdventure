<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="KONTL"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/buttonGunung"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="gunung"
                android:text="GUNUNG"
                tools:ignore="OnClick"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/buttonPerlengkapan"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="perlengkapan"
                android:text="PERLENGKAPAN"
                tools:ignore="OnClick" />


            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/buttonLogistik"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="logistik"
                android:text="LOGISTIK"
                tools:ignore="OnClick" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
    <Button
        android:layout_marginEnd="20dp"
        android:id="@+id/buttonEmergency"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="EMERGENCY"
        android:onClick="emergency"
        tools:ignore="OnClick" />

    <Button
        android:layout_marginEnd="20dp"
        android:id="@+id/buttonSurvival"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="SURVIVAL"
        android:onClick="survival"
        tools:ignore="OnClick" />

    <Button
        android:layout_marginEnd="20dp"
        android:id="@+id/buttonTentang"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="TENTANG"
        android:onClick="tentang"
        tools:ignore="OnClick" />

    </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
