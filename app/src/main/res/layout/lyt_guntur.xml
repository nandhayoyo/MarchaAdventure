<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewJudul"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUNUNG GUNTUR (2.249 MDPL)"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20sp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/gunungguntur"
                        android:layout_width="310dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:id="@+id/gambar1"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/gunungguntur2"
                        android:layout_width="310dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:id="@+id/gambar2"
                        android:layout_weight="1" />

                    <ImageView
                        android:src="@drawable/gunungcikuray3"
                        android:layout_width="310dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:id="@+id/gambar3"
                        android:layout_weight="1" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:gravity=""
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGunung"
                android:layout_marginTop="15dp"
                android:text="@string/guntur"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_margin="20dp"
                android:id="@+id/textViewGunung2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/guntur2"
                android:textStyle="bold"
                android:textColor="@color/black"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>